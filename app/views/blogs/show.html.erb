<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @blog.image.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user.name %>
</p>

  <% unless @blog.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <% if @blog.user_id == current_user.id %>
    <%= link_to '編集', edit_blog_path %> <%= link_to '一覧', blogs_path %> <%= link_to '削除', @blog, method: :delete, data: { confirm: '消しても良いの?' } %>
  <% else %>
    <%= link_to '一覧へ', blogs_path %>
  <% end %>
