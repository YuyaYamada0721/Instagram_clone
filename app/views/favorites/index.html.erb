<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>お気に入りした人</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.blog.content %></td>
        <td><%= favorite.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '一覧へ戻る', blogs_path %>
